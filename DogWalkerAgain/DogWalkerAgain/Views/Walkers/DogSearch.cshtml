@model DogWalkerAgain.Models.DogBreedViewModel

@{
    ViewBag.Title = "DogSearch";
}

<h2>DogSearch</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Dogs" asp-action="DogSearch" method="get">
    <p>


        <select asp-for="DogBreed" asp-items="Model.Breeds">
            <option value="">All</option>
        </select>

        Name: <input type= "text" asp-for="SearchString" />

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Breed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].SpayedNeutered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Owner.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Dogs) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Breed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpayedNeutered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.FirstName)
        </td>
        <td>
            @Html.ActionLink("Details", "DogDetails", new { id = item.Id })
        </td>
    </tr>
}

</table>

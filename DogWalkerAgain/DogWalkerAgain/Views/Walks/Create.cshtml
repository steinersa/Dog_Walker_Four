@{
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

@model DogWalkerAgain.Models.Walk

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.WalkerId)
    @Html.HiddenFor(model => model.OwnerId)

    <div class="form-horizontal">
        <h4>Walk</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.OwnersApprovalStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OwnersApprovalStatus, new SelectList(new[] { "posted", "approved", "denied" }, Model.OwnersApprovalStatus))
                @Html.ValidationMessageFor(model => model.OwnersApprovalStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WalkComplete, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.WalkComplete)
                    @Html.ValidationMessageFor(model => model.WalkComplete, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Owners")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
